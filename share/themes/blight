#!psh
# based on bashish blight theme by icetrey <trey@imagin.net>

package themes;

$color= "\033[36m";
$grey= "\033[0m";
$black= "\033[30m";
$bold="\033[1m";
$nobold="\033[0m";

$openright="/";
$closeright="\\\\";
$dash="-";

$c1="\\[$nobold$color\\]";
$c2="\\[$bold$color\\]";
$c3="\\[$bold$black\\]";
$c4="\\[$grey\\]";

Psh::Options::set_option('ps1',"$c3$openright$c1$dash$c2($c1\\u$c3\@$c1\\h$c2)$c1$dash$c2($c1\\#$c3/$c1\\t$c3:$c1\\d$c2)$c1$dash$c3$dash\n$c3$closeright$c1$dash$c2($c1\\\$$c3:$c1\\w$c2)$c1$dash$c3$dash$c4 ");

package main;
