# this is not quite right at this point
# need a way to get output of builtin --- FIXIT!!!
sub _wait_func {
    my ($cur, $line, $start, $cmd) = @_;

    if ($cur =~ /^%/) {
  	return compgen(qw(-A running -P %), substr($cur,1));
    } elsif ($cur =~ /^[0-9]/) {
  	return grep(/^$cur/, `jobs -p`);
    } else {
  	return compgen(qw(-A running -P %), `jobs -p`);
    }
}
complete -F _wait_func wait

#
# meta-completion (completion for complete/compgen)
#
sub _complete_meta_func {
    my ($cur, $line, $start, $cmd) = @_;

    my ($prev) = substr($line, 0, $start) =~ /(\S+)\s+$/;
    my @COMPREPLY = _redir_test($cur, $prev);
    return @COMPREPLY if @COMPREPLY;

    if (substr($line, 0, $start) =~ /^\s*(\S+)\s+$/ || $cur eq '-' ) {
	return qw(-a -b -c -d -e -f -j -k -v -u -r -p -A -G -W -P -S -X -F -C);;
    }

    if ($prev eq '-A') {
	return qw(alias arrayvar binding builtin command directory
		  disabled enabled export file function helptopic hostname
		  job keyword running setopt shopt signal stopped variable);
    } elsif ($prev eq '-F') {
	return compgen('-A', 'function', $cur);
#    } elsif ($prev eq '-C') {
#	return compgen('-c', $cur);
    } else {
	return compgen('-c', $cur);
    }
}
complete -F _complete_meta_func complete

